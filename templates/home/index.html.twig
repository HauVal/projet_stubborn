{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <link rel="stylesheet" href="{{ asset('css/home.css') }}">

    <header>
        <div class="logo">
            <img src="{{ asset('images/Logo.png') }}" alt="Logo">
            <p>Don't compromise on your look</p>
        </div>

        <nav>
            {% if app.user %}
                <a href="/" class="select">Accueil</a></li>
                <a href="/products">Boutique</a></li>
                <a href="/cart">Panier</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="/admin">Back-office</a>
                {% endif %}
                <a href="/logout" class="logout">Se déconnecter</a></li>
            {% else %}
                <a href="/">Accueil</a></li>
                <a href="/login">Se connecter</a></li>
                <a href="/register">S'inscrire</a></li>
            {% endif %}
        </nav>
    </header>

    <main>
        {% for product in products %}
            <div class="product">
                <img src="{{ asset('imagesProduits/' ~ product.image) }}" alt="{{ product.name }}">
                <h2>{{ product.name }}</h2>
                <p>Prix : {{ product.price }} €</p>
                {% if app.user %}
                    <a href="{{ path('product_show', {'id': product.id}) }}">Voir</a>
                {% endif %}
            </div>
        {% endfor %}
    </main>

    <footer>
        <p><strong>Stubborn</strong> est une entreprise de vente de sweat-shirts.</p>
        <p>Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
        <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a>
    </footer>
{% endblock %}
