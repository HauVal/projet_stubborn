{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('product_list') }}" class="btn btn-secondary mb-3">Retour à la boutique</a>
    
    <h1>{{ product.name }}</h1>
    <img src="{{ asset('imagesProduits/' ~ product.image) }}" alt="{{ product.name }}" class="img-fluid">
    <p>Prix : {{ product.price|number_format(2, ',', ' ') }} €</p>
</div>
{% endblock %}