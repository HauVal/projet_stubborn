{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('product_list') }}" class="btn btn-secondary mb-3">Retour à la boutique</a>

    <div class="row">
        <!-- Image du produit -->
        <div class="col-md-6">
            <img src="{{ asset('imagesProduits/' ~ product.image) }}" alt="{{ product.name }}" class="img-fluid">
        </div>

        <!-- Informations du produit et formulaire -->
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p>Prix : {{ product.price|number_format(2, ',', ' ') }} €</p>

            <!-- Formulaire pour sélectionner une taille -->
            <form method="post" action="{{ path('cart_add', { id: product.id }) }}">
                <label for="size">Taille :</label>
                <select id="size" name="size" class="form-select mb-3" required>
                    {% for stock in stocks %}
                        <option value="{{ stock.size }}" {% if stock.quantity == 0 %}disabled{% endif %}>
                            {{ stock.size }} {% if stock.quantity == 0 %}(Indisponible){% endif %}
                        </option>
                    {% endfor %}
                </select>

                <!-- Bouton pour ajouter au panier -->
                <button type="submit" class="btn btn-primary">Ajouter au panier</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
